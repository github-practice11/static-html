pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("my-html-app:latest", ".")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("my-html-app:latest").run("-p 8080:80")
                }
            }
        }
        stage('Create Directory on EC2') {
            steps {
                script {
                    sshScript remote: '3.17.161.195', user: 'ubuntu', script: 'mkdir /home/ubuntu/my_project'
                }
            }
        }
    }

    post {
        always {
            script {
                docker.image("my-html-app:latest").stop()
                docker.image("my-html-app:latest").remove()
            }
        }
    }
}
 
